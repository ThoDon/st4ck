# =============================================================================
# ST4CK - Audiobook Pipeline Configuration
# =============================================================================
# Copy this file to .env and update the values according to your setup
# 
# IMPORTANT: Never commit the actual .env file to version control!
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Path to the SQLite database file (relative to container)
DB_PATH=/app/db/rss.sqlite


# =============================================================================
# TRANSMISSION TORRENT CLIENT CONFIGURATION
# =============================================================================
# Transmission web interface credentials
# IMPORTANT: Change these from the default values for security!
TRANSMISSION_USER=admin
TRANSMISSION_PASS=admin

# Transmission connection settings
TRANSMISSION_HOST=transmission
TRANSMISSION_PORT=9091

# =============================================================================
# SYSTEM USER/GROUP CONFIGURATION
# =============================================================================
# User and Group IDs for file permissions
# Run 'id' command to get your UID and GID
PUID=1000
PGID=1000

# Timezone for containers
TZ=UTC

# =============================================================================
# AUTO-M4B CONVERSION CONFIGURATION
# =============================================================================
# Number of CPU cores to use for conversion (adjust based on your server)
CPU_CORES=2
# Sleep time between conversion checks
SLEEPTIME=1m
# Whether to create backup files during conversion (Y/N)
MAKE_BACKUP=N

VITE_API_URL=http://localhost:8081
